<%= form_for @user, url: "/sessions/create" do |f| %>

  <div class="field">
    <%= f.label :name, "Enter your name" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
<% end %>
